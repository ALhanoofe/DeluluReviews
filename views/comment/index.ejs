<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>View page</title>
  <link rel="stylesheet" href="/style/viewPage.css" />
</head>
<body>
  <%- include('../partials/_navbar') %>
<div>
        <div class="post-div">
          <div class="image">
          <img
            src="../../uploads/<%= post.image %>"
            alt="<%= post.name %>"
            width="150"
          />
          </div>
          <h3>Name: <%= post.name %></h3>
          <h3>Author: <%= post.author %></h3>
          <h3>Post Owner: <%= post.postOwner.username %></h3>
          <%if (post.comment){%>
          <h3>Cast: <%= post.cast %></h3>
          <%}%>

          <h3>Rating: <%= post.rate %></h3>
          <h3>Review:
            <p>
            <%= post.review %>
            </p>
            </h3>
        </div>


    <% comments.forEach(comment => { %>
    <div class="comment-section">
      <h5> <%= comment.postOwner.username %></h5>
      <h3> <%= comment.description %></h3>
    </div>
      <% }) %>

    <div class="comment">
      <form action="/comment/<%= post._id %>/new" method="POST">


      <label for="comment">Comment</label>
      <input type="text" id="comment-input" name="description" required>
      <button type="submit"> comment</button>
  </form>
    </div>
</div>
</body>
</html>
